# Server Configuration
PORT=3000
NODE_ENV=development

# Database Configuration
# MongoDB connection strings for your databases
MONGODB_AUTH_URI=mongodb://localhost:27017/authdb
MONGODB_FEEDBACK_URI=mongodb://localhost:27017/feedbackDB

# Database Connection Options
DB_SERVER_SELECTION_TIMEOUT=5000
DB_CONNECT_TIMEOUT=10000
DB_SOCKET_TIMEOUT=45000

# Email Configuration (Nodemailer with Gmail)
# Replace with your actual Gmail credentials
EMAIL_SERVICE=gmail
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_gmail_app_password
EMAIL_FROM=your_email@gmail.com

# OTP Configuration
OTP_EXPIRY_MINUTES=5
DEVELOPMENT_MODE=true

# Security Configuration
# Generate a secure JWT secret: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your_jwt_secret_key

# Session Secret (for express-session if you add it later)
SESSION_SECRET=your_session_secret

# BCrypt Configuration
BCRYPT_ROUNDS=10

# Rate Limiting (if you implement rate limiting)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration (if needed)
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Logging
LOG_LEVEL=info

# File Upload Configuration (if you add file uploads later)
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads

# Admin Configuration
DEFAULT_ADMIN_USERNAME=admin
DEFAULT_ADMIN_EMAIL=admin@feedbackportal.com
DEFAULT_ADMIN_PASSWORD=secure_admin_password
